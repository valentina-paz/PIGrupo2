<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
    <%- include('./partials/headerLog') %>

    <main>
        <section class="center main-content">
        <h1 class="titulo-form">Editar Post</h1>
        <form class= "form" action="/posts/updatePost/id/<%= post.id %>" method="POST">
            <% if (locals.errors) { %>
                <p class="mensaje-error"><%= locals.errors.message %></p>
              <% } %>
            <label for="nombreImg">URL:</label><input id= "nombreImg" type="text" name="nombreImg" value="">
            <label for="textoPost">Caption:</label><input id="textoPost" type="text" name="textoPost" value="">
            <button type="submit">Enviar</button>
        </form>

        </section>
    </main>
    
    <%- include('./partials/footer') %>

</body>

</html>