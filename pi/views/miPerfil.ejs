<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>
        <% if (locals.user !=undefined) { %>
            <%- include('./partials/headerLog') %>
                                            <main>
                                <% if (idUsuario<0) { %>
                                    <h2 class="sin-resultados">No hay resultados para ese id. Por favor eliia otro</h2>
                                    <% } else {%>
                                        <div class="user-detail container">
                                            <section class="top main-content">
                                                <img class="profile" src="<%= locals.user.fotoPerfil %>"
                                                    alt="Foto de perfil">
                                                <div class="info-usuario info-usuario-color">
                                                    <p>
                                                        <%= user.nombre %>
                                                    </p>
                                                    <% if (locals.user !=undefined && idUsuario == user.id) { %>
                                                        <div class="contenedor-editarPerfil">
                                                            <a href="/usuarios/editarMiPerfil/id/<%= user.id %>"><i class="fa-regular fa-pen-to-square fa-xl" style="color: mediumseagreen;"></i></a></div>
                                                    <% } %> 
                                                    <a class="follow" href="">seguir</a>
                                                    <ul class="meta">
                                                        <li><%= posteos.length %> posteos</li>
                                                        <li>200 seguidores</li>
                                                        <li>300 seguidos</li>
                                                    </ul>
                                                </div>
                                            </section>
                                            <section class="bottom">
                                                <% for( let i=0; i < posteos.length; i++ ) { %>
                                                    <article class="post">
                                                        <a href="/posts/detalle/id/<%= posteos[i].id %>">
                                                            <img src="<%= posteos[i].nombreImg %>" alt="Posteo">
                                                        </a>
                                                    </article>
                                                    <% } %>
                                            </section>
                                        </div>
                                        <% } %>
                            </main>
                            <%- include('./partials/footer') %>
                <% } else { %>
                    <%- include('./partials/header') %>
                        <% } %>

    </body>

</html>